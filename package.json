{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "test": "jest --config jestconfig.json"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tslint -p tsconfig.json"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "malditos-goblins-lib",
  "description": "A simple MalditosGoblins's goblins generator library",
  "author": "Ant√¥nio Marco da Silva <antomarsi@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/antomarsi/malditos-goblins"
  },
  "homepage": "https://github.com/antomarsi/malditos-goblins#readme",
  "module": "dist/malditos-goblins-lib.esm.js",
  "size-limit": [
    {
      "path": "dist/malditos-goblins-lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/malditos-goblins-lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "keywords": [
    "malditos goblins",
    "rpg",
    "generator",
    "typescript"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/jest": "^26.0.24",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "size-limit": "^5.0.1",
    "ts-jest": "^27.0.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  }
}
